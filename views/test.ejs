<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify Clone - Responsive</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #000; }
        ::-webkit-scrollbar-thumb { background: #555; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #888; }

        input[type=range] { -webkit-appearance: none; background: transparent; }
        input[type=range]::-webkit-slider-thumb {
            -webkit-appearance: none; height: 12px; width: 12px; border-radius: 50%;
            background: #1db954; margin-top: -4px; cursor: pointer;
        }
        input[type=range]::-webkit-slider-runnable-track {
            width: 100%; height: 4px; cursor: pointer; background: #535353; border-radius: 2px;
        }

        /* Desktop Collapse State */
        @media (min-width: 768px) {
            .sidebar-collapsed { width: 80px !important; }
            .sidebar-collapsed .link-text, .sidebar-collapsed .logo-text { display: none; }
            .sidebar-collapsed .nav-item { justify-content: center; }
        }

        /* Mobile Drawer State */
        @media (max-width: 767px) {
            #sidebar { position: fixed; z-index: 50; height: 100%; left: -100%; transition: left 0.3s ease; width: 80%; max-width: 300px; }
            #sidebar.mobile-open { left: 0; }
            /* Overlay for mobile when sidebar is open */
            #overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 40; }
            #overlay.active { display: block; }
        }
    </style>
</head>
<body class="bg-black text-white h-screen flex flex-col font-sans overflow-hidden">

    <div id="overlay" onclick="toggleMobileSidebar()"></div>

    <div class="flex flex-1 overflow-hidden relative">
        
        <aside id="sidebar" class="bg-black flex flex-col transition-all duration-300 ease-in-out p-4 gap-6 w-64 md:relative border-r border-[#282828] md:border-none">
            <button class="md:hidden absolute top-4 right-4 text-gray-400" onclick="toggleMobileSidebar()">
                <i class="fa-solid fa-xmark text-2xl"></i>
            </button>

            <div class="flex items-center gap-2 px-2 cursor-pointer md:justify-start justify-center" onclick="toggleDesktopCollapse()">
                <i class="fa-brands fa-spotify text-3xl text-white"></i> 
                <span class="logo-text text-xl font-bold tracking-tight">MusicPlayer</span>
            </div>

            <nav class="flex flex-col gap-2">
                <a href="#" class="nav-item flex items-center gap-4 bg-[#282828] text-white px-4 py-3 rounded-md transition hover:bg-[#3E3E3E]">
                    <i class="fa-solid fa-house text-xl"></i>
                    <span class="link-text font-semibold">Home</span>
                </a>
                <a href="#" class="nav-item flex items-center gap-4 text-gray-400 px-4 py-3 rounded-md transition hover:text-white hover:bg-[#121212]">
                    <i class="fa-solid fa-magnifying-glass text-xl"></i>
                    <span class="link-text font-semibold">Search</span>
                </a>
                <a href="#" class="nav-item flex items-center gap-4 text-gray-400 px-4 py-3 rounded-md transition hover:text-white hover:bg-[#121212]">
                    <i class="fa-solid fa-book text-xl"></i>
                    <span class="link-text font-semibold">Library</span>
                </a>
            </nav>

            <div class="border-t border-gray-800 mt-2"></div>

            <div class="flex flex-col gap-4 px-2 mt-2">
                 <a href="#" class="nav-item flex items-center gap-4 text-gray-400 hover:text-white transition">
                    <i class="fa-solid fa-square-plus text-xl"></i>
                    <span class="link-text font-semibold">Create Playlist</span>
                </a>
                <a href="#" class="nav-item flex items-center gap-4 text-gray-400 hover:text-white transition">
                    <i class="fa-solid fa-heart text-xl text-purple-400"></i>
                    <span class="link-text font-semibold">Liked Songs</span>
                </a>
            </div>
        </aside>

        <main class="flex-1 bg-[#121212] md:rounded-lg md:m-2 md:ml-0 overflow-y-auto relative w-full">
            
            <header class="sticky top-0 bg-[#121212]/95 backdrop-blur-md z-10 flex items-center justify-between p-4 px-4 md:px-8 shadow-lg">
                
                <div class="flex items-center gap-4 flex-1">
                    <button class="md:hidden text-white text-xl mr-2" onclick="toggleMobileSidebar()">
                        <i class="fa-solid fa-bars"></i>
                    </button>

                    <div class="hidden md:flex gap-2">
                        <button class="bg-black rounded-full p-2 px-3 text-gray-400 hover:text-white"><i class="fa-solid fa-chevron-left"></i></button>
                        <button class="bg-black rounded-full p-2 px-3 text-gray-400 hover:text-white"><i class="fa-solid fa-chevron-right"></i></button>
                    </div>

                    <div class="relative w-full max-w-xs md:max-w-md md:ml-4">
                        <span class="absolute left-3 top-2.5 text-gray-400"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input type="text" placeholder="Search song..." 
                            class="bg-[#2A2A2A] text-white text-sm rounded-full py-3 pl-10 pr-4 w-full focus:outline-none focus:ring-2 focus:ring-white border border-transparent hover:border-[#444]">
                    </div>
                </div>

                <div class="hidden sm:flex items-center gap-4">
                    <button class="bg-white text-black font-bold text-sm px-4 py-2 rounded-full hover:scale-105 transition">Premium</button>
                    <button class="bg-[#2A2A2A] rounded-full p-2 hover:bg-[#3E3E3E]">
                        <i class="fa-regular fa-user text-white"></i>
                    </button>
                </div>
            </header>

            <div class="p-4 md:p-8 pt-4">
                <h2 class="text-xl md:text-2xl font-bold mb-6">New Releases</h2>
                
                <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6">
                    
                    <div class="bg-[#181818] p-3 md:p-4 rounded-lg hover:bg-[#282828] transition duration-300 group cursor-pointer">
                        <div class="relative">
                            <img src="https://picsum.photos/300/300?random=1" class="w-full aspect-square object-cover rounded-md shadow-lg mb-3 md:mb-4">
                            <button class="hidden md:block absolute bottom-2 right-2 bg-green-500 rounded-full p-3 shadow-xl opacity-0 translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 hover:scale-110">
                                <i class="fa-solid fa-play text-black ml-1"></i>
                            </button>
                        </div>
                        <h3 class="font-bold text-white truncate text-sm md:text-base">Ek Mulaqaat</h3>
                        <p class="text-xs md:text-sm text-gray-400 mt-1 line-clamp-2">Latest Hit</p>
                    </div>

                    <div class="bg-[#181818] p-3 md:p-4 rounded-lg hover:bg-[#282828] transition duration-300 group cursor-pointer">
                        <div class="relative">
                            <img src="https://picsum.photos/300/300?random=2" class="w-full aspect-square object-cover rounded-md shadow-lg mb-3 md:mb-4">
                        </div>
                        <h3 class="font-bold text-white truncate text-sm md:text-base">Kehna Chahun</h3>
                        <p class="text-xs md:text-sm text-gray-400 mt-1 line-clamp-2">Artist Name</p>
                    </div>

                     <div class="bg-[#181818] p-3 md:p-4 rounded-lg hover:bg-[#282828] transition duration-300 group cursor-pointer">
                        <div class="relative">
                            <img src="https://picsum.photos/300/300?random=3" class="w-full aspect-square object-cover rounded-md shadow-lg mb-3 md:mb-4">
                        </div>
                        <h3 class="font-bold text-white truncate text-sm md:text-base">Mirza</h3>
                        <p class="text-xs md:text-sm text-gray-400 mt-1 line-clamp-2">Trending</p>
                    </div>

                     <div class="bg-[#181818] p-3 md:p-4 rounded-lg hover:bg-[#282828] transition duration-300 group cursor-pointer">
                        <div class="relative">
                            <img src="https://picsum.photos/300/300?random=4" class="w-full aspect-square object-cover rounded-md shadow-lg mb-3 md:mb-4">
                        </div>
                        <h3 class="font-bold text-white truncate text-sm md:text-base">Mili Nazar</h3>
                        <p class="text-xs md:text-sm text-gray-400 mt-1 line-clamp-2">Love Songs</p>
                    </div>

                     <div class="bg-[#181818] p-3 md:p-4 rounded-lg hover:bg-[#282828] transition duration-300 group cursor-pointer">
                        <div class="relative">
                            <img src="https://picsum.photos/300/300?random=5" class="w-full aspect-square object-cover rounded-md shadow-lg mb-3 md:mb-4">
                        </div>
                        <h3 class="font-bold text-white truncate text-sm md:text-base">Shartaan</h3>
                        <p class="text-xs md:text-sm text-gray-400 mt-1 line-clamp-2">Punjabi</p>
                    </div>

                </div>
                </div>
            <div class="h-28"></div> </main>
    </div>

    <footer class="h-[80px] md:h-[90px] bg-black border-t border-[#282828] px-2 md:px-4 flex items-center justify-between fixed bottom-0 w-full z-50">
        
        <div class="flex items-center gap-3 w-[40%] md:w-[30%]">
            <img src="https://picsum.photos/56/56?random=1" alt="Cover" class="rounded h-10 w-10 md:h-14 md:w-14">
            <div class="flex flex-col justify-center">
                <a href="#" class="text-sm text-white hover:underline truncate w-24 md:w-auto font-semibold">Ek Mulaqaat</a>
                <a href="#" class="text-xs text-gray-400 hover:underline hover:text-white truncate w-20 md:w-auto">Artist</a>
            </div>
            <i class="fa-regular fa-heart text-gray-400 ml-2 hidden sm:block"></i>
        </div>

        <div class="flex flex-col items-center w-[20%] md:w-[40%]">
            <div class="flex items-center gap-4 md:gap-6 mb-1">
                <i class="fa-solid fa-shuffle text-gray-400 hover:text-white cursor-pointer text-lg hidden md:block"></i>
                <i class="fa-solid fa-backward-step text-gray-300 hover:text-white cursor-pointer text-xl hidden sm:block"></i>
                
                <button class="bg-white rounded-full p-2 px-2.5 hover:scale-105 transition">
                    <i class="fa-solid fa-play text-black text-lg md:text-xl ml-0.5"></i>
                </button>

                <i class="fa-solid fa-forward-step text-gray-300 hover:text-white cursor-pointer text-xl"></i>
                <i class="fa-solid fa-repeat text-gray-400 hover:text-white cursor-pointer text-lg hidden md:block"></i>
            </div>
            
            <div class="hidden md:flex items-center gap-2 w-full max-w-md">
                <span class="text-xs text-gray-400">0:00</span>
                <input type="range" min="0" max="100" value="30" class="w-full h-1 bg-gray-600 rounded-lg appearance-none cursor-pointer">
                <span class="text-xs text-gray-400">3:45</span>
            </div>
        </div>

        <div class="flex items-center justify-end gap-3 w-[30%] hidden md:flex">
            <i class="fa-solid fa-microphone text-gray-400 hover:text-white text-sm"></i>
            <div class="flex items-center gap-2 w-24">
                <i class="fa-solid fa-volume-high text-gray-400 text-sm"></i>
                <input type="range" min="0" max="100" value="80" class="w-full h-1 bg-gray-600 rounded-lg appearance-none cursor-pointer">
            </div>
        </div>
    </footer>

    <script>
        // Desktop Collapse Logic
        function toggleDesktopCollapse() {
            if(window.innerWidth >= 768) {
                const sidebar = document.getElementById('sidebar');
                sidebar.classList.toggle('sidebar-collapsed');
            }
        }

        // Mobile Drawer Logic
        function toggleMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            
            // Toggle classes manually for mobile drawer
            sidebar.classList.toggle('mobile-open');
            overlay.classList.toggle('active');
        }
    </script>
</body>
</html>